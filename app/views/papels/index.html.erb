<div class="container-fluid table-div">
  <p id="notice"><%= notice %></p>
  <h1>Papels</h1>
  <div class="table-responsive">
    <table class="table table-hover table-bordered table-striped text-center">
      <thead>
        <tr>
          <th>Descricao</th>
          <th colspan="3">Ações</th>
        </tr>
      </thead>
      <tbody>
        <% @papels.each do |papel| %>
        <tr>
          <td><%= papel.descricao %></td>
          <td><%= link_to 'Show', papel %></td>
          <td><%= link_to 'Edit', edit_papel_path(papel) %></td>
          <td><%= link_to 'Destroy', papel, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <br>
  <%= link_to '<span class="fa fa-plus"></span> New Papel'.html_safe, new_papel_path, class:'btn btn-info' %>
</div>
