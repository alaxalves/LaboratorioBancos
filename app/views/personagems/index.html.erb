<p id="notice"><%= notice %></p>

<h1>Personagems</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Nome filme</th>
      <th>Nome ator</th>
      <th>Cache ator</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @personagems.each do |personagem| %>
      <tr>
        <td><%= personagem.nome %></td>
        <td><%= personagem.nome_filme %></td>
        <td><%= personagem.nome_ator %></td>
        <td><%= personagem.cache_ator %></td>
        <td><%= link_to 'Show', personagem %></td>
        <td><%= link_to 'Edit', edit_personagem_path(personagem) %></td>
        <td><%= link_to 'Destroy', personagem, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

