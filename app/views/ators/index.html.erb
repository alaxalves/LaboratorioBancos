<div class="container-fluid table-div">
  <p id="notice"><%= notice %></p>
  <h1>Ators</h1>
  <div class="table-responsive">
    <table class="table table-hover table-bordered table-striped text-center">
      <thead>
        <tr>
          <th>Nome</th>
          <th>Nome artistico</th>
          <th>Seguro social</th>
          <th>Nacionalidade</th>
          <th>Idade</th>
          <th colspan="3">Ações</th>
        </tr>
      </thead>
      <tbody>
        <% @ators.each do |ator| %>
          <tr>
            <td><%= ator.nome %></td>
            <td><%= ator.nome_artistico %></td>
            <td><%= ator.seguro_social %></td>
            <td><%= ator.nacionalidade %></td>
            <td><%= ator.idade %></td>
            <td><%= link_to 'Show', ator %></td>
            <td><%= link_to 'Edit', edit_ator_path(ator) %></td>
            <td><%= link_to 'Destroy', ator, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <br>
  <%= link_to '<span class="fa fa-plus"></span> New Ator'.html_safe, new_ator_path, class:'btn btn-info' %>
</div>
